{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/countdown.css') }}"/>
    {% endblock %}

 {% block body %}
     {{ include('AppBundle:Partial:overhead.html.twig') }}
     <div class="row">
         <div class="large-12 column main">
             <div class="foreground">
                 <div class="large-8 medium-10 small-12 large-offset-2 medium-offset-1 text-center">
                     <h3>{{ title }}</h3>

                     {{ form_start(form) }}
                     <div class="row">
                         <div class="small-12 medium-3 large-2 text-center medium-text-right column">
                             {{ form_label(form.title, null, {'label_attr'  : {'class' : 'middle'}}) }}
                         </div>
                         <div class="small-12 medium-9 large-10 column">
                             {{ form_widget(form.title) }}
                         </div>
                     </div>

                     <div class="row">
                         <div class="small-12 medium-3 large-2 text-center medium-text-right column">
                             {{ form_label(form.description, null, {'label_attr'  : {'class' : 'middle'}}) }}
                         </div>
                         <div class="small-12 medium-9 large-10 column">
                             {{ form_widget(form.description) }}
                         </div>
                     </div>

                     <div class="row">
                         <div class="small-12 medium-3 large-2 text-center medium-text-right column">
                             {{ form_label(form.date.date, null, {'label_attr'  : {'class' : 'middle'}}) }}
                         </div>
                         <div class="small-12 medium-3 column">
                             {{ form_widget(form.date.date.day) }}
                         </div>
                         <div class="small-12 medium-3 column">
                             {{ form_widget(form.date.date.month) }}
                         </div>
                         <div class="small-12 medium-3 column end">
                             {{ form_widget(form.date.date.year) }}
                         </div>
                     </div>
                     <div class="row">
                         <div class="small-12 medium-3 large-2 text-center medium-text-right column">
                             {{ form_label(form.date.time, null, {'label_attr'  : {'class' : 'middle'}}) }}
                         </div>
                         <div class="small-12 medium-3 column">
                             {{ form_widget(form.date.time.hour) }}
                         </div>
                         <div class="small-12 medium-3 column end">
                             {{ form_widget(form.date.time.minute) }}
                         </div>
                     </div>

                     <div class="small-12">
                         <div class="button-group form-buttons small-12 small-offset-0 text-right">
                             <button type="submit" value="save project" class="button primary">save</button>
                             <a class="button secondary"
                                href={{ path("countdown_index") }}>cancel</a>
                         </div>
                     </div>
                     {{ form_end(form) }}
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}
