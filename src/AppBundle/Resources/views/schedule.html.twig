{% extends 'AppBundle::CountdownBase.html.twig' %}

{% form_theme form _self %}

{% block form_errors %}
    {% if errors|length > 0 -%}
        {% if form.parent %}<small class="error">{% else %}<div data-alert class="alert-box alert">{% endif %}
        {%- for error in errors -%}
            {{ error.message }}
            {% if not loop.last %}, {% endif %}
        {%- endfor -%}
        {% if form.parent %}</small>{% else %}</div>{% endif %}
    {%- endif %}
{% endblock %}

{%- block time_widget -%}
    {%- if widget == 'single_text' -%}
        {{ block('form_widget_simple') }}
    {%- else -%}
        {%- set vars = widget == 'text' ? { 'attr': { 'size': 1 }} : {} -%}
        <div {{ block('widget_container_attributes') }}>
            <div class="small-6 column no-left-gutter">{{ form_widget(form.hour, vars) }}</div>
            {% if with_minutes %}
                <div class="small-6 column no-right-gutter">{{ form_widget(form.minute, vars) }}</div>
            {% endif %}
            {% if with_seconds %}
                <div class="small-6 column">{{ form_widget(form.second, vars) }}</div>
            {% endif %}
        </div>
    {%- endif -%}
{%- endblock time_widget -%}

{% block _schedule_items_entry_widget %}
    <div class="small-2 column start">
        {{ form_widget(form.deadline, {'attr' : {'class' : 'row'}}) }}
    </div>
    <div class="small-3 column">
        <div>{{ form_widget(form.name) }}</div>
    </div>
    <div class="small-3 column">
        <div>{{ form_widget(form.description) }}</div>
    </div>
    <div class="small-3 column end">
        <div>{{ form_widget(form.owner) }}</div>
    </div>
{% endblock %}

{% block content %}
    <div class="small-10 small-offset-1 text-center">
        {{ form_start(form) }}
        <div class="row">
            {% if 0 != form.vars.errors.count %}
                <div class="small-12 column callout small alert">
                    {{ form_errors(form) }}
                </div>
            {% endif %}
        </div>
        <h2>Project schedule</h2>
        <table class="table unstriped text-left">
            <tr>
                <td><b>Name: </b></td>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <td><b>Description:</b></td>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <td><b>Date:</b></td>
                <td>{{ project.date|date('m-d-Y') }}</td>
            </tr>
            <tr>
                <td><b>Start:</b></td>
                <td>{{ project.date|date('H:i') }}</td>
            </tr>
        </table>
        {#{{ form_start(form) }}#}
        {#{{ form_errors(form) }}#}
        <div class="row schedule-head show-for-large">
            <div class="small-6 column">Name</div>
            <div class="small-3 column end">Deadline</div>
        </div>
        <div class="items" data-prototype="{{ form_widget(form.items.vars.prototype)|e('html_attr') }}">
            {% for item in form.items %}
                <div class="row">
                    <fieldset class="schedule-item">
                        <div class="small-12 large-6 column">
                            <div class="row">
                                <div class="small-12 has-error column">
                                    {{ form_widget(item.name) }}
                                </div>
                                <div class="small-12 text-right invalid-field column">
                                    {{ form_errors(item.name) }}
                                </div>
                            </div>
                        </div>
                        <div class="small-12 large-3 column start">
                            <div class="row">
                                <div class="small-12 column has-error">
                                    {{ form_widget(item.deadline) }}
                                </div>
                                <div class="small-12 text-right invalid-field column">
                                    {{ form_errors(item.deadline) }}
                                </div>
                            </div>
                        </div>
                        <div class="small-4 large-2 small-offset-2 large-offset-0 column">
                            <div class="button-group text-right">
                                <a class="dropdown button primary show-for-medium" type="button"
                                   data-toggle="extra-pane-{{ item.vars.id }}"> more</a>
                                <a class="fa fa-caret-down button primary hide-for-medium" type="button"
                                   data-toggle="extra-pane-{{ item.vars.id }}"></a>
                            </div>
                        </div>
                        <div id="extra-pane-{{ item.vars.id }}" class="dropdown-pane" data-dropdown>
                            <div class="row">
                                <div class="small-12 column has-error">
                                    <div>{{ form_widget(item.description, {'label_attr' : {'class' : 'text-left'}}) }}</div>
                                </div>
                                <div class="small-12 column invalid-field text-right">
                                    <div>{{ form_errors(item.description) }}</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="small-12 column has-error">
                                    <div>{{ form_widget(item.owner, {'label_attr' : {'class' : 'text-left'}}) }}</div>
                                </div>
                                <div class="small-12 column invalid-field text-right">
                                    <div>{{ form_errors(item.owner) }}</div>
                                </div>
                            </div>
                        </div>
                        {#<div class="small-12 large-6 text-right end invalid-field column">#}
                        {#{{ form_errors(item.name) }}#}
                        {#</div>#}
                        {#<div class="small-12 large-6 text-right end invalid-field column">#}
                        {#{{ form_errors(item.deadline) }}#}
                        {#</div>#}
                    </fieldset>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="button-group">
                {{ form_widget(form.save, {'attr' : {'class' : 'button primary'}}) }}
                <a href="{{ path('countdown_index') }}" class="button secondary">cancel</a>
            </div>
        </div>
        {{ form_widget(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/schedule.js') }}"></script>
{% endblock %}
